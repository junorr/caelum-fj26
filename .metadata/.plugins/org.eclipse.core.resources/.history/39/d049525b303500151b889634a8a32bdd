					update=":form-nota :form-prod :form-list :form-msg"/>
			&#160;&#160;
			
			<p:commandButton value="Cancelar" action="#{nf.clearItem()}"
					style="display: #{nf.editItem ? 'inline' : 'none'};"
					process=":form-prod :form-list"
					update=":form-prod :form-list"/>
			&#160;&#160;
		</h:panelGroup>
	</h:panelGrid>
	</h:form>
