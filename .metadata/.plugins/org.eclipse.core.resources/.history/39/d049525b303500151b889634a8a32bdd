		</p:selectOneMenu>

		<h:outputLabel value="Quantidade:" for="iqtd"/>		
		<p:inputText id="iqtd" value="#{nf.item.quantidade}"
				style="width: 100px;"/>
		
		<h:inputHidden id="hidden-id" value="#{nf.item.id}"/>
		
		<h:panelGroup>
			<p:commandButton value="Adicionar Item" action="#{nf.appendItem()}"
