package br.com.caelum.notasfiscais.bean;

import java.io.Serializable;

import javax.faces.view.ViewScoped;
import javax.inject.Inject;
import javax.inject.Named;

import br.com.caelum.notasfiscais.dao.NotaFiscalDao;
import br.com.caelum.notasfiscais.dao.ProdutoDao;
import br.com.caelum.notasfiscais.modelo.Item;
import br.com.caelum.notasfiscais.modelo.NotaFiscal;
import br.com.caelum.notasfiscais.modelo.Produto;

@Named("nf")
@ViewScoped
public class NotaBean implements Serializable {

	public static final String
			MSG_OK = "%s %s com Sucesso",
			MSG_ERROR = "Erro ao %s";

	private Item item;
	
	private Long idProduto;
	
	private NotaFiscal nota;
	
	private String message;
	
	private boolean editItem;
	
	@Inject private transient ProdutoDao pdao;
	
	@Inject private transient NotaFiscalDao dao;
	
	
	public NotaBean() {
		item = new Item();
		nota = new NotaFiscal();
		message = "";
		editItem = false;
		idProduto = null;
	}
	
	
	public String getMessage() {
		return message;
	}
	
	
	public Item getItem() {
		return item;
	}
	
	
	public Long getIdProduto() {
		return idProduto;
	}
	
	
	public void setIdProduto(Long id) {
		idProduto = id;
	}
	
	
	public NotaFiscal getNota() {
		return nota;
	}
	
	
	public boolean isEditItem() {
		return editItem;
	}
	
	
	public void edit(Item it) {
		if(it == null) return;
		item = it;
		editItem = true;
	}
	
	
	public void clearItem() {
		if(editItem) {
			nota.getItens().add(item);
			editItem = false;
		}
		item = new Item();
		message = "";
	}
	
	
	public void remove(Item it) {
		if(it == null) return;
		nota.getItens().remove(it);
		message = "Item Removido com Sucesso!";
	}
	
	
	public void appendItem() {
		if(idProduto == null) {
			System.out.println("# ID produto == null");
			return;
		}
		Produto p = pdao.buscaPorId(idProduto);
		if(p == null) {
			System.out.println("# Produto n√£o encontrado");
			return;
		}
		item.setProduto(p);
		nota.getItens().add(item);
		item.setNotaFiscal(nota);
		item.setValorUnitario(item.getProduto().getPreco());
		System.out.println("* Item Adicionado: "+ item);
		item = new Item();
		idProduto = null;
		editItem = false;
		message = "Item Adicionado com Sucesso!";
	}
	
	
	public void gravarNota() {
		dao.adiciona(nota);
		message = "Nota Fiscal Gravada com Sucesso!";
		nota = new NotaFiscal();
		item = new Item();
		editItem = false;
		idProduto = null;
	}
	
}
